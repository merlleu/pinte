<Window x:Class="PinteUI.OperationSettingsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PinteUI"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        mc:Ignorable="d"
        Title="Pinte" Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="RD1" Height="Auto"/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <!-- Fields Panel -->
        <StackPanel x:Name="FieldsPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="300">
            
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="2">
            <Button Click="OnSubmit" Content="Apply" x:Name="SubmitButton" Height="20" Margin="20, 1"/>
        </StackPanel>

    </Grid>
</Window>
